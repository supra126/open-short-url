{
  "name": "open-short-url",
  "version": "1.1.0",
  "description": "開源、白標化、可自部署的短網址平台",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "postinstall": "pnpm --filter backend prisma generate",
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:docs": "pnpm --filter @open-short-url/docs dev",
    "build": "pnpm -r --filter=!@open-short-url/mcp run build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:mcp": "pnpm --filter @open-short-url/mcp build",
    "build:docs": "pnpm --filter @open-short-url/docs build",
    "preview:docs": "pnpm --filter @open-short-url/docs preview",
    "start": "concurrently \"pnpm --filter backend start:prod\" \"pnpm --filter frontend start\"",
    "start:backend": "pnpm --filter backend start:prod",
    "start:frontend": "pnpm --filter frontend start",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test",
    "prisma:generate": "pnpm --filter backend prisma generate",
    "prisma:migrate": "pnpm --filter backend prisma migrate dev",
    "prisma:studio": "pnpm --filter backend prisma studio",
    "generate:api-types": "pnpm --filter frontend generate:api-types",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/supra126/open-short-url.git"
  },
  "author": "supra126",
  "license": "MIT",
  "dependencies": {
    "helmet": "^8.1.0"
  }
}
