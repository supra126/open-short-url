# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4101

# Short URL Domain (for displaying short URLs to users)
NEXT_PUBLIC_SHORT_URL_DOMAIN=http://localhost:4101

# Internationalization (i18n)
# Available locales: en, zh-TW
# Defaults to 'en' if not set or locale file not found
NEXT_PUBLIC_LOCALE=zh-TW

# Cloudflare Turnstile (Anti-bot Protection) - OPTIONAL
# Leave empty to disable bot protection
# Get your keys from: https://dash.cloudflare.com/?to=/:account/turnstile
# For testing, use these dummy site keys:
# - Always passes: 1x00000000000000000000AA
# - Always fails (visible): 2x00000000000000000000AA
# - Always fails (invisible): 3x00000000000000000000AA
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# Branding
NEXT_PUBLIC_BRAND_NAME=Open Short URL
NEXT_PUBLIC_BRAND_ICON_URL=
NEXT_PUBLIC_BRAND_DESCRIPTION=

# Application
NODE_ENV=development

# ============================================
# AI Configuration
# ============================================
# AI functionality is DISABLED by default
# To enable: Configure at least one AI provider below

# Default AI Provider (if configured)
# Options: openai | anthropic | google | vertex | mistral | cohere
# AI_PROVIDER=anthropic

# Default AI Model (depends on provider)
# AI_MODEL=claude-3-5-sonnet-20241022

# AI Parameters (optional)
# AI_TEMPERATURE=0.7
# AI_MAX_TOKENS=4096
# AI_TOP_P=1.0

# ============================================
# AI Provider API Keys
# ============================================
# Set at least ONE of these to enable AI chat functionality

# OpenAI (GPT-4, GPT-3.5)
# Get API key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...

# Anthropic (Claude)
# Get API key from: https://console.anthropic.com/
# Recommended for best results
# ANTHROPIC_API_KEY=sk-ant-...

# Google AI (Gemini)
# Get API key from: https://ai.google.dev/
# GOOGLE_GENERATIVE_AI_API_KEY=...

# Google Vertex AI
# Requires GCP project and credentials
# GOOGLE_VERTEX_PROJECT=your-gcp-project
# GOOGLE_VERTEX_LOCATION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Mistral AI
# Get API key from: https://console.mistral.ai/
# MISTRAL_API_KEY=...

# Cohere
# Get API key from: https://dashboard.cohere.com/
# COHERE_API_KEY=...
